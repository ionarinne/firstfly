#include <stdio.h>

int main() {
    int x;
    int n = 0;

    // 从控制台输入一个整数
    scanf_s("%d", &x);

    // 计算输入整数的位数
    do {
        x = x / 10; // 将 x 的值除以 10，向下取整，相当于去掉了 x 的个位数字
        n++; // 统计去掉个位数字后的 x 的位数
    } while (x > 0); // 当 x 的值大于 0 时，循环继续

    // 输出输入整数的位数
    printf("%d", n);

    return 0;
}

// 代码功能：从控制台输入一个整数，计算输入整数的位数并输出
