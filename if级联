#include<stdio.h>
int main() {
    int f; // 定义变量 f，用于存储计算结果
    int x; // 定义变量 x，用于存储输入的整数
    scanf("%d", &x); // 读取一个整数，存储到变量 x 中

    // 根据变量 x 的值计算变量 f 的值
    if (x < 0) {
        f = -1; // 如果 x 小于 0，f 的值为 -1
    }
    else if (x == 0) {
        f = 0; // 如果 x 等于 0，f 的值为 0
    }
    else {
        f = 2 * x; // 否则，f 的值为 2 * x
    }

    printf("%d", f); // 输出变量 f 的值
    return 0;
}
